{
  "include": ["src", "src/index.d.ts"],
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "baseUrl": "./src",
    "module": "es6",
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist/",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules"
  ]
}
