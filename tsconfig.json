{
  "include": ["./src"],
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "es6",
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist/",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true
  },
  "exclude": [
    "node_modules"
  ]
}
